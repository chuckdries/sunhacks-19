{{#each messages}}
<p>{{this.message}}</p>
{{/each}}

<form action="message" method="post">
  <input type="email" name="authorEmail" placeholder="email" />
  <input type="password" name="authorPassword" placeholder="password" />
  <input type="text" name="message" placeholder="message" />
  <button type="submit">send</button>
</form>
